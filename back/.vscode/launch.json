    "version": "0.2.0",
    "configurations": [
        {
            "name": "with nodemon",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "pnpm",
            "sourceMaps":true,
            "runtimeArgs": [
                "run-script",
                "start"
            ],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "outFiles": [
                "${workspaceFolder}/build/**/*.js"
            ],
        }
    ]
}